
extends layout/default.pug
block previte-head
  link(rel="stylesheet" href="/dist/css/home.css")
block content
  script.
    require(['/dist/customerjs/pages/home.js'])
  .page-home
    //- span.test #{i18n.__('cool')}
    //- 大 banner    
    .section-banner
      #banner.section-main
        .viewer-box
          ul.slide-wrap
            li
              a(href="")
                img(src="/img/banner/test1.png")
                .l-upper
                  .l-tool-bar
                    .l-main
                      span.item
                        i.icon-download
                        s 20
                      span.item.item2
                        i.icon-eye
                        s 20
                      button.ic-btn-big.i-outline-primary #{i18n.__("Save")}
            li
              a(href="")
                img(src="/img/banner/test2.png")
                .l-upper
                  .l-tool-bar
                    .l-main
                      span.item
                        i.icon-download
                        s 20
                      span.item.item2
                        i.icon-eye
                        s 20
                      button.ic-btn-big.i-outline-primary #{i18n.__("Save")}
            li
              a(href="")
                img(src="/img/banner/test3.png")
                .l-upper
                  .l-tool-bar
                    .l-main
                      span.item
                        i.icon-download
                        s 20
                      span.item.item2
                        i.icon-eye
                        s 20
                      button.ic-btn-big.i-outline-primary #{i18n.__("Save")}
        ul.panel
          li
            img(src="/img/banner/test1.png")
          li
             img(src="/img/banner/test2.png")
          li
             img(src="/img/banner/test3.png")
    //- 公告
    .section-notice.home-section
        span #{i18n.__("IONC token total number")}：
        span.f-32.bold #{totalIncome}
        span  IONChain
    //- 设备
    .section-equipment-data#section-equipment-data
      .eq_prev.icon-left-arrow
      .section-main
        .slide-wrap(data-bind="foreach: equList")
          .card-H(style="display:none;" data-bind="visible: name")
            .card-hd 荣耀P20 Pro手机
            .card-bd
              .l-progess
                input.dial.hide-tem(type='text' data-readOnly=true value='75' data-linecap="round" data-thickness="0.12" data-width="86" data-fgColor="#26E3E7")
                .l-num.them-em1
                  span 85
                  s %
              .l-info
                p.info1
                  span.tip-color #{i18n.__("Contribution degree")}：
                  span.bold.them-em1.font-nm 8981
                  span.them-em2   IONC
                p
                  span.tip-color #{i18n.__("Number")}：
                  span 50 K
                p
                  span.tip-color #{i18n.__("Online time")}：
                  span 9,099.00 h
      .eq_next.icon-right-arrow
    //- 数据图表
    .section-chart
      .section-main
        .box-chart.l-boxL
          .chart-hd
            span.l-tit #{i18n.__("Contribution chart/curve")}
            ul.l-panel
              li.active(data-bind="click: changePeriod.bind($data,'24h')") 24h
              li(data-bind="click: changePeriod.bind($data, 'week')") #{i18n.__("Weekly")}
              li(data-bind="click: changePeriod.bind($data, 'month')") #{i18n.__("Monthly")}
              li(data-bind="click: changePeriod.bind($data, 'year')") #{i18n.__("Annually")}
          .chart-bd.chart1#chart1
            .error-tip-gray(style="display:none;" data-bind="visible: canvasError()")
              | #{i18n.__("browser version tip")}
        .box-chart.l-boxR
          .chart-hd
              span.l-tit #{i18n.__("Category increase proportion")}
              ul.l-panel
                li.active(data-bind="click: changePeriod2.bind($data,'24h')") 24h
                li(data-bind="click: changePeriod2.bind($data, 'week')") #{i18n.__("Weekly")}
                li(data-bind="click: changePeriod2.bind($data, 'month')") #{i18n.__("Monthly")}
                li(data-bind="click: changePeriod2.bind($data, 'year')") #{i18n.__("Annually")}
          .chart-bd.chart2#chart2
            .error-tip-gray(style="display:none;" data-bind="visible: canvasError()")
              | #{i18n.__("browser version tip")}
    //- 广告位
    .section-adv
      img.wid-max(src="/img/home/adv-bg.png")
      .l-upper
        p #{i18n.__("Launch a device")}
        a.ic-btn-normal.i-primary #{i18n.__("Launched devices")}
    //- 设备，卡片列表
    .section-equipment
      .section-main
        .sec-hd
          span.l-title
            i.v-line
            em #{i18n.__("Active devices")}
          .l-search
            .search-input
              input()
              i.search-btn.icon-search
        ul.sec-bd
          each item,index in deviceLists
            li.card-I(class=(index + 1) % 3 == 0 ? 'row-right' : '' )
                  //- (style="display:none;" data-bind="css: {'row-right': ($index()+1) % 3 == 0}, visible: name")
                  .cont_f1
                      .cont_f1_img
                        img(src=item.image_url)
                      .cont_f1_text 
                          .f1_name=item.name
                          p
                              label #{i18n.__("System")}：
                              span=item.system
                          p
                              label #{i18n.__("Device ID")}：
                              span 1578698
                          p
                              label #{i18n.__("Number")}：
                              span=item.counts
                          p
                              label #{i18n.__("Submission date")}：
                              span=item.created_at
                  .cont_f2 #{i18n.__("Sample completion")}
                  .cont_f3 
                    #scheduleX
                  .cont_f4
                      span.cont_f4_o #{i18n.__("Smart wear")}
                      span #{i18n.__("IT Technology")}
                  .cont_f5
                      .good
                          i.icon-light-star
                          i.icon-gray-star
                          i.icon-gray-star
                          i.icon-gray-star
                          i.icon-gray-star
                      .down
                        a(href="/download_can/" + item.id)
                            i.icon-download
                            span 20
                      .look
                          i.icon-eye
                          span 20
                      .del 
                            a(href="#") #{i18n.__("Delete")}
                      .compile
                            a(href="#") #{i18n.__("Edit")}
                      
        .l-toolbar
          button.ic-btn-big.i-outline-primary(style="width: 180px;") #{i18n.__("Load more")}
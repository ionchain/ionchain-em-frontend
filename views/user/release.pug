extends ./layout.pug
block user-content
    .release 
        .release_nav 
            a(href="#").active #{i18n.__("Device")}
        ul.release_content
            each item,index in deviceLists
                li.card-I(class = index % 2 == 0 ? 'second' : '')
                    .cont_f1
                        .cont_f1_img 
                            img(src=item.image_url)
                        .cont_f1_text
                            .f1_name=item.name
                            p
                                label #{i18n.__("System:")}
                                span=item.system
                            p
                                label #{i18n.__("Device ID:")}
                                span 1578698
                            p
                                label #{i18n.__("Number:")}
                                span=item.counts
                            p
                                label #{i18n.__("Submission date:")}
                                span=item.created_at
                    .cont_f2 #{i18n.__("Sample completion:")}
                    .cont_f3
                    .scheduleX(data-progress="90")
                    .cont_f4
                        span.cont_f4_o #{i18n.__("Smart wear")}
                        span #{i18n.__("IT Technology")}
                    .cont_f5
                        .good
                            i.icon-light-star
                            i.icon-gray-star
                            i.icon-gray-star
                            i.icon-gray-star
                            i.icon-gray-star
                        
                        .down
                            a(href="/download_can/" + item.id)
                                i.icon-download
                                span 20
                        .look
                            i.icon-eye
                            span 20
                        .del 
                            a(href="#") #{i18n.__("Delete")}
                        .compile
                            a(href="#") #{i18n.__("Edit")}
            a(href="/equipment-add")                
                li.plus
                    i
                    span